<?xml version="1.0" encoding="utf-8"?>
<com.hjz.share.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@android:color/darker_gray"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_translucent"></FrameLayout>
    <ImageView
        android:id="@+id/video"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/ic_video"
        android:visibility="invisible"></ImageView>

    <FrameLayout
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/mask"
        android:visibility="gone"></FrameLayout>

    <ImageView
        android:id="@+id/mask_flag"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignRight="@+id/thumbnail"
        android:visibility="invisible"
        android:background="@mipmap/ic_selected_grid" />

</com.hjz.share.view.SquareRelativeLayout>